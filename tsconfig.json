{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": ".",
		"removeComments": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": [
				"*"
			],
			"@controllers/*": [
				"src/controllers/*"
			],
			"@docs/*": [
				"src/docs/*"
			],
			"@models/*": [
				"src/models/*"
			],
			"@middleware/*": [
				"src/middleware/*"
			],
			"@views/*": [
				"src/views/*"
			],
			"@routes/*": [
				"src/routes/*"
			],
			"@allRoutes": [
				"src/routes"
			],
			"@config/*": [
				"src/configs/*"
			],
			"@mails/*": [
				"src/scripts/mails/*"
			],
			"@uploads/*": [
				"uploads/*"
			]
		}
	},
	"include": [
		"app.ts",
		"**/*",
		"src/**/*"
	]
}