{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@controllers/*": [
				"/src/controllers/*"
			],
			"@docs/*": [
				"/src/docs/*"
			],
			"@models/*": [
				"/src/models/*"
			],
			"@middlewares/*": [
				"/src/middlewares/*"
			],
			"@views/*": [
				"/src/views/*"
			],
			"@routes/*": [
				"/src/routes/*"
			],
			"@config/*": [
				"/scripts/config/*"
			],
			"@mails/*": [
				"/scripts/mails/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"scripts/**/*"
	]
}