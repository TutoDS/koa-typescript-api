{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": ".",
		"removeComments": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": [
				"*"
			],
			"@controllers": [
				"src/controllers/index.ts"
			],
			"@docs": [
				"src/docs/index.ts"
			],
			"@models": [
				"src/models/index.ts"
			],
			"@middleware": [
				"src/middleware/index.ts"
			],
			"@views": [
				"src/views/index.ts"
			],
			"@controllers/*": [
				"src/controllers/*"
			],
			"@docs/*": [
				"src/docs/*"
			],
			"@models/*": [
				"src/models/*"
			],
			"@middleware/*": [
				"src/middleware/*"
			],
			"@views/*": [
				"src/views/*"
			],
			"@routes": [
				"src/routes"
			],
			"@routes/*": [
				"src/routes/*"
			],
			"@config": [
				"src/configs/index.ts",
			],
			"@config/*": [
				"src/configs/*"
			],
			"@mails/*": [
				"src/scripts/mails/*"
			],
			"@uploads/*": [
				"uploads/*"
			],
			"@packages/*": [
				"./node_modules/*"
			],
			"@public/*": [
				"./public/*"
			]
		}
	},
	"include": [
		"app.ts",
		"**/*",
		"src/**/*"
	]
}