{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"prettier"
	],
	"settings": {
		"import/resolver": {
			"typescript": {} // this loads <rootdir>/tsconfig.json to eslint
		}
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"rules": {}
}